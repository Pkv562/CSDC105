<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("widgets/head") %>
</head>
<body>
    <%- include("widgets/navbar") %>

    <div class="container">
        <div class="search-section">
            <div class="search-dropdown">
                <select id="roleFilter">
                    <option value="">All Roles</option>
                    <option value="TANK">TANK</option>
                    <option value="DPS">DPS</option>
                    <option value="SUPPORT">SUPPORT</option>
                </select>
            </div>
            <div class="search-dropdown">
                <select id="heroFilter">
                    <option value="">All Heroes</option>
                    <option value="DVA">DVA</option>
                    <option value="Mei">Mei</option>
                    <option value="Kiriko">Kiriko</option>
                    <option value="Zen">Zen</option>
                </select>
            </div>
            <div class="search-input">
                <input type="text" id="searchInput" placeholder="Search blogs...">
                <button class="search-btn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>

        <div class="section-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header">
                        <h2 class="section-title">All Blogs</h2>
                        <a href="/blogs/create" class="btn">Create New Blog</a>
                    </div>
                    <section class="blog-list">
                        <% if (blogs.length > 0) { %>
                            <% blogs.forEach(blog => { %>
                                <div class="blog-card" data-title="<%= blog.title.toLowerCase() %>">
                                    <div class="blog-image">
                                        <img src="<%= blog.image || '/assets/overwatch.avif' %>" alt="<%= blog.title %>">
                                    </div>
                                    <div class="blog-content">
                                        <div class="blog-meta">
                                            <span>Posted â€¢ <%= new Date(blog.createdAt).toLocaleDateString() %></span>
                                        </div>
                                        <h3 class="blog-title"><%= blog.title %></h3>
                                        <p class="blog-snippet"><%= blog.snippet %></p>
                                        <div class="blog-actions">
                                            <a href="/blogs/<%= blog._id %>" class="read-more">Read more</a>
                                            <div class="action-buttons">
                                                <a href="/blogs/edit/<%= blog._id %>" class="btn edit-btn">Edit</a>
                                                <button class="btn delete-btn" data-id="<%= blog._id %>">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="no-blogs">
                                <p>There are no blogs to display...</p>
                                <p>Why not <a href="/blogs/create">create one</a>?</p>
                            </div>
                        <% } %>        
                    </section>
                </div>
            </div>
        </div>
    </div>

    <%- include("widgets/footer") %>

    <script src="script.js"></script>
</body>
</html>
